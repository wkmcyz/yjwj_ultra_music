<Window x:Class="UltAssist.KeyRecordingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="按键录制" Height="400" Width="550"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Topmost="True">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 录制区域 -->
        <Border Grid.Row="0" Background="White" Margin="20" CornerRadius="8" 
                BorderBrush="#E0E0E0" BorderThickness="2">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <TextBlock Text="🎹" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                
                <TextBlock x:Name="InstructionText" 
                          Text="请按下按键组合，按ESC取消..."
                          FontSize="14" FontWeight="SemiBold" 
                          HorizontalAlignment="Center" Margin="0,0,0,15"
                          Foreground="#2E3440"/>
                
                <Border x:Name="RecordedKeyBorder" 
                       Background="#5E81AC" CornerRadius="5" 
                       Padding="15,10" MinWidth="200" MaxWidth="450"
                       HorizontalAlignment="Center" Margin="0,0,0,15"
                       Visibility="Collapsed">
                    <TextBlock x:Name="RecordedKeyText" 
                              Text="" FontFamily="Consolas" FontSize="14" FontWeight="Bold"
                              Foreground="White" HorizontalAlignment="Center"
                              TextWrapping="Wrap" TextAlignment="Center"/>
                </Border>
                
                <TextBlock x:Name="StatusText" 
                          Text="等待按键输入..."
                          FontSize="12" FontStyle="Italic"
                          HorizontalAlignment="Center"
                          Foreground="#5E81AC"
                          TextWrapping="Wrap" TextAlignment="Center"
                          MaxWidth="450" Margin="10,0"/>
            </StackPanel>
        </Border>
        
        <!-- 按钮区域 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                   HorizontalAlignment="Right" Margin="20,0,20,20">
            <Button x:Name="CancelBtn" Content="取消" 
                   Width="80" Height="32" Margin="0,0,10,0"
                   Click="CancelBtn_Click"/>
            <Button x:Name="ConfirmBtn" Content="确认" 
                   Width="80" Height="32" 
                   Background="#A3BE8C" Foreground="White" 
                   BorderThickness="0" IsEnabled="False"
                   Click="ConfirmBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
