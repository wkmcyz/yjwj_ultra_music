<Window x:Class="UltAssist.KeyMappingEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="编辑按键映射" Height="450" Width="500"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🎹 按键映射配置" FontSize="16" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <Border Background="#5E81AC" CornerRadius="5" Padding="10,5" HorizontalAlignment="Center">
                <TextBlock x:Name="KeyDisplayText" Text="" FontFamily="Consolas" 
                          FontSize="14" FontWeight="Bold" Foreground="White"/>
            </Border>
        </StackPanel>
        
        <!-- 配置区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- 显示名称 -->
                <GroupBox Header="显示名称" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBox x:Name="DisplayNameBox" 
                                ToolTip="为此映射设置一个友好的名称（可选），如：大招音乐、技能音效等"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- 匹配模式 -->
                <GroupBox Header="匹配模式" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <RadioButton x:Name="ExactMatchRadio" Content="精准匹配" IsChecked="True" Margin="0,0,0,5"
                                    ToolTip="只有完全一致的按键组合才触发（如：配置V，只有单独按V才触发）"/>
                        <RadioButton x:Name="ContainsMatchRadio" Content="包含匹配" Margin="0,0,0,5"
                                    ToolTip="按下的按键包含配置的按键就触发（如：配置V，按V+W+A等组合也会触发）"/>
                        <TextBlock Text="💡 游戏中经常同时按多键时建议使用包含匹配" 
                                  FontSize="11" FontStyle="Italic" Foreground="#5E81AC" Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- 音频文件 -->
                <GroupBox Header="音频文件" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="AudioFileBox" Grid.Column="0" 
                                    Margin="0,0,10,0" IsReadOnly="True"
                                    ToolTip="选择要播放的音频文件"/>
                            <Button x:Name="BrowseAudioBtn" Grid.Column="1" 
                                   Content="📁 浏览" Padding="10,5"
                                   Click="BrowseAudioBtn_Click"/>
                        </Grid>
                        
                        <Button x:Name="TestAudioBtn" Content="▶️ 试听" 
                               Margin="0,8,0,0" Padding="8,5" HorizontalAlignment="Left"
                               Click="TestAudioBtn_Click"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- 播放设置 -->
                <GroupBox Header="播放设置" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 音量 -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="音量:" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="VolumeSlider" Grid.Column="0" 
                                       Minimum="0" Maximum="1" Value="0.7" 
                                       TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                                <TextBlock x:Name="VolumeText" Grid.Column="1" 
                                          Text="70%" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                        
                        <!-- 淡入淡出 -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="淡入时间 (ms):" Margin="0,0,0,3"/>
                                <TextBox x:Name="FadeInBox" Text="200" Width="80"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="淡出时间 (ms):" Margin="0,0,0,3"/>
                                <TextBox x:Name="FadeOutBox" Text="150" Width="80"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- 再次按下时的行为 -->
                        <StackPanel Grid.Row="2" Margin="0,0,0,10">
                            <TextBlock Text="再次按下时:" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="StopOnRepeatRadio" Content="停止音乐" Margin="0,0,20,0" IsChecked="True"
                                           ToolTip="再次按下相同按键时停止当前播放"/>
                                <RadioButton x:Name="RestartOnRepeatRadio" Content="从头播放音乐"
                                           ToolTip="再次按下相同按键时从头开始播放"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- 时长配置 -->
                        <StackPanel Grid.Row="3" Margin="0,0,0,10">
                            <TextBlock Text="时长配置:" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <RadioButton x:Name="DefaultDurationRadio" Content="默认时长" Margin="0,0,20,0" IsChecked="True"
                                           ToolTip="播放音频文件的原始时长" Checked="DurationRadio_Changed"/>
                                <RadioButton x:Name="CustomDurationRadio" Content="指定时长" 
                                           ToolTip="循环播放直到指定时长" Checked="DurationRadio_Changed"/>
                            </StackPanel>
                            <StackPanel x:Name="CustomDurationPanel" Orientation="Horizontal" Margin="0,5,0,0" 
                                      Visibility="Collapsed">
                                <TextBlock Text="时长 (秒):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox x:Name="CustomDurationBox" Text="30" Width="80"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- 其他设置 -->
                        <StackPanel Grid.Row="4" Margin="0,0,0,10">
                            <CheckBox x:Name="InterruptibleCheck" Content="播放新音乐时停止该音乐" IsChecked="False"
                                     ToolTip="勾选后，播放其他音乐时会自动停止当前音乐；取消勾选后，可以同时播放多个音乐"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- 按钮区域 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                   HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="CancelBtn" Content="取消" 
                   Width="80" Height="32" Margin="0,0,10,0"
                   Click="CancelBtn_Click"/>
            <Button x:Name="SaveBtn" Content="保存" 
                   Width="80" Height="32" 
                   Background="#A3BE8C" Foreground="White" 
                   BorderThickness="0"
                   Click="SaveBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
