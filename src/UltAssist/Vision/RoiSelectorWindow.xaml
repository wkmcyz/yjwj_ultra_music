<Window x:Class="UltAssist.Vision.RoiSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True" Background="#40FFFFFF"
        Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize"
        Title="ROI Selector" Height="300" Width="400">
    <Canvas x:Name="RootCanvas" Background="#40FFFFFF">
        <Rectangle x:Name="SelectionRect" Stroke="#FF4080FF" StrokeThickness="2" Fill="#3080B3FF" Visibility="Collapsed"/>
    </Canvas>
</Window>


